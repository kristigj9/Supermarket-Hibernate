<hibernate-configuration>
    <session-factory>
        <!-- Driver dhe URL pÃ«r MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/supermarket?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Kristi2025!</property>

        <!-- Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Auto create/update DB schema -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Show SQL queries -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Entitetet -->
        <mapping class="com.supermarket.entity.Product"/>
        <mapping class="com.supermarket.entity.Customer"/>
        <mapping class="com.supermarket.entity.Order"/>
        <mapping class="com.supermarket.entity.OrderItem"/>
    </session-factory>
</hibernate-configuration>